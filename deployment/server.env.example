# TigerSpot Backend Environment Variables
# Copy this to /home/ubuntu/tigerspot/server/.env

# Database - RDS PostgreSQL connection string
DATABASE_URL="postgresql://USERNAME:PASSWORD@YOUR-RDS-ENDPOINT.rds.amazonaws.com:5432/tigerspot?schema=public"

# JWT Secret - generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Server Configuration
PORT=4000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL="https://YOUR_DOMAIN.com"

# CAS Authentication (Princeton)
CAS_SERVICE_URL="https://YOUR_DOMAIN.com/api/auth/cas/callback"

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
