{
	"name": "tigerspot",
	"private": true,
	"version": "2.0.0",
	"license": "BSD-3-Clause",
	"scripts": {
		"install:all": "pnpm install && pnpm --filter tigerspot-server install && pnpm --filter tigerspot-new install",
		"dev": "concurrently -n server,client -c blue,green \"pnpm --filter tigerspot-server dev\" \"pnpm --filter tigerspot-new dev\"",
		"dev:server": "pnpm --filter tigerspot-server dev",
		"dev:client": "pnpm --filter tigerspot-new dev",
		"build": "pnpm --filter tigerspot-new build",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"db:generate": "pnpm --filter tigerspot-server db:generate",
		"db:migrate": "pnpm --filter tigerspot-server db:migrate",
		"db:push": "pnpm --filter tigerspot-server db:push",
		"db:studio": "pnpm --filter tigerspot-server db:studio",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:reset": "docker compose down -v && docker compose up -d",
		"prepare": "husky"
	},
	"devDependencies": {
		"concurrently": "^9.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1"
	},
	"lint-staged": {
		"apps/frontend/**/*.{js,ts,svelte,css,html,json,md}": "prettier --write",
		"apps/server/**/*.{js,ts,json,md}": "prettier --write"
	}
}
